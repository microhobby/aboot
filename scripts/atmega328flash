#!/bin/bash

# set fuses
# LOW nothing selected
avrdude \
	-v \
	-D \
	-patmega328p \
	-cusbasp \
	-Pusb \
	-U lfuse:w:0xFF:m

# HIGH = BOOTRST | BOOTSZ1 | EESAVE | SPIEN 
avrdude \
	-v \
	-D \
	-patmega328p \
	-cusbasp \
	-Pusb \
	-U hfuse:w:0xD2:m

sleep 1

# EXTENDED = BODLEVEL1
avrdude \
	-v \
	-D \
	-patmega328p \
	-cusbasp \
	-Pusb \
	-U efuse:w:0xFD:m

sleep 1

# ðŸ˜² LOCKBIT = no LMP and SPM in application section
 avrdude \
	-v \
	-D \
	-patmega328p \
	-cusbasp \
	-Pusb \
	-U lock:w:0xCF:m

sleep 1

# flash
avrdude \
	-v \
	-D \
	-patmega328p \
	-cusbasp \
	-Pusb \
	-Uflash:w:../.pio/build/castellino/firmware.hex:i

echo "Success?"
